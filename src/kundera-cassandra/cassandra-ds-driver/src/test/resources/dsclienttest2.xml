<?xml version="1.0" encoding="UTF-8"?>
<clientProperties>
	<datastores>
		<dataStore>
			<name>cassandra</name>
			<connection>
				<properties>
					<property name="loadbalancing.policy" value="DCAwareRoundRobinPolicy"></property>
					<property name="compression" value="NONE"></property>
					<property name="reconnection.policy" value="ConstantReconnectionPolicy"></property>
					<property name="retry.policy" value="DowngradingConsistencyRetryPolicy"></property>

					<property name="localdc" value="datacenter1"></property>
					<property name="usedHostsPerRemoteDc" value="2"></property>
					<property name="constantDelayMs" value="110000"></property>

					<property name="isTokenAware" value="true"></property>
					<property name="isLoggingRetry" value="true"></property>
					<property name="socket.timeout" value="110000"></property>
					<property name="readTimeoutMillis" value="110000"></property>
					<property name="keepAlive" value="false"></property>
					<property name="reuseAddress" value="true"></property>
					<property name="soLinger" value="10"></property>
					<property name="tcpNoDelay" value="true"></property>
					<property name="receiveBufferSize" value="12"></property>
					<property name="sendBufferSize" value="11"></property>


					<property name="hostDistance" value="LOCAL"></property>
					<property name="maxConnectionsPerHost" value="12"></property>
					<property name="maxRequestsPerConnection" value="128"></property>
					<property name="coreConnections" value="5"></property>


				</properties>
			</connection>
		</dataStore>
	</datastores>
</clientProperties>